
    <header class="page_block">      
      {{>headerDark}}
           
    </header>
    {{!-=================================== --}}

     {{#with hero}}
      <div class="hero">        
          <h1 class="hero_title">{{title}}</h1>
          <p class="hero_description">{{description}}</p>
          {{#with button}}
            <a class="hero_button" href="{{url}}">{{text}}</a>  
          {{/with}}       
      </div>
    {{/with}}
    <section class="about">
      {{#with about}}
        <h1 class="about_heading">{{heading}} </h1>
        <p class="about_info">{{info}} </p>
      {{/with}}
    </section>

    <section class="articles" >
      <div class="articles_header">
        <h1 class="articles_title">Our Articles</h1>
        <a href="#" class="articles_button">View All</a>
      </div>
      <div class="articles_content">
        {{#each articles}}
           {{>articleCardDark}}
        {{/each}}
      </div>
        
    </section>
    




{{!-- =========================================== --}}
    <footer class="page_block">
      {{>footerDark}}
    </footer>
