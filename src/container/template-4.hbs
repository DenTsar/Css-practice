
    <header class="page_block">
      <div class='header'>
        <div>
          {{>logo}}
        </div>
        
        <nav class='header_nav' >
        <div class="header_nav_right">
          {{>nav list=header }}
        </div>        
        </nav>
      </div>     
    </header>

    {{#with main}}
      <main class="main">
        <img src="{{image}}" alt="Main image" class="main_image">
        <div class="main_content">
          <h1 class="main_title">{{heading}}</h1>
          <p class="main_text">{{descriotion}}</p>
          <a class="button main_button" href="{{href}}">{{button}}</a>  
        </div>
        
      </main>
    {{/with}}
    
    

    <main class="featured">
      {{#each featured}}
        {{>cardFeat data=this}}
      {{/each}}
    </main>

    
    <div class="actions">      
        {{#each actions}}
          <div class="action_item">
            <h3 class="actions_title">{{heading}} </h3> 
            <a class="actions_button" href="{{url}}">{{text}}</a>            
          </div>  
        {{/each}}   
    </div>
    


    <footer class="page_block">
      <div class="list">
        <div class="footer">
          <div class="">
            {{>logo}}
            <span class="footercopy">Copiright 2023-2024</span> 
          </div>
          {{#each footer}}
            <div class="">
              <span class="footer_title">{{title}}</span>
              {{>nav list=links isVertical="true"}}
            </div>
          {{/each}}
        </div>      
      </div>  
    </footer>
