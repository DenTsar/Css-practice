<div class='page'>
  <div class='page_content'>
    <header class="page_block">
      <div class='header'>
        <div class="">
          {{>logo}}
        </div>
        
        <nav class='header_nav' >
        <div class="header_nav_right">
          {{>nav list=header }}
        </div>        
        </nav>
      </div>
     
    </header>
    
    <section class="page_block">
      <div class="hero">
        {{>hero title=hero.title text= hero.text}}       
        <a class="button" href="{{hero.button.url}}">{{hero.button.text}}</a>   
      </div>
    </section>



    <section class="page_block">
      <div class="flex-container">
        {{#each preview}}
          
            {{> cardPreview class="flex-item" data=this}}            
          
        {{/each}}        
      </div>   
    </section>


    <main class="page_block">
      <div class="main"> 
        <div class="row g-0">              
          <div class="col-12">
            <div class="list_header">
                   
                <div class=" ">
                  <h2 class="list_title">List of posts</h2>
                    
                </div>
                <div class="">
                  <div class="category_list">
                    {{#each categories}}
                      <button class="category_button">{{text}}</button>
                    {{/each}}
                  </div>
                  
                </div>  
             
            </div>
          </div> 

          <div class="col-7">
            <div class="list">
              {{#each news}} 
               {{> cardPost data=this}}
              {{/each}}
            </div>
          </div>

          <div class="col-5">
            <aside class="list_aside">
              <div class="about">
                <h4 class="about_title">About</h4>
                <p class="about_text">{{about}}</p>

              </div>

              {{>linkList data=archive title="Archives"}}
              {{>linkList data=social title="Social"}}
              
            </aside>
          </div>                       
          
      </div>  
    </main>


    <footer class="page_block">
      <div class="list">
        <div class="footer">
          <div class="">
            {{>logo}}
            <span class="footercopy">Copiright 2023-2024</span> 
          </div>
          {{#each footer}}
            <div class="">
              <span class="footer_title">{{title}}</span>
              {{>nav list=links isVertical="true"}}
            </div>
          {{/each}}
        </div>      
      </div>  
    </footer>
  </div>

</div>