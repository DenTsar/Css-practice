
    <header class="page_block">
      <div class='header'>
        <div class="">
          {{>logo}}
        </div>
        
        <nav class='header_nav' >
        <div class="header_nav_right">
          {{>nav list=header }}
        </div>        
        </nav>
      </div>     
    </header>
    {{!-++++++++++++++++++++++++++++++-  --}}

    <main class="main">
      {{#with info }}
      
        <div class="info">
            <h1 class="info_title">{{title}} </h1>
            <p class="info_text">{{description}} </p>
             
        </div>        
      {{/with}}

      {{#with form}}
        <form class="form">
          
          <div class="form_input_list">
              {{#each inputs}}
                <input type="{{type}}" placeholder="{{placeholder}}"
                name="{{name}}" id="form-input-{{id}}" class="form_input">
              {{/each}}
          </div>
          <div class="form_checkbox">
            <input type="checkbox" name="checkbox.name">
            <label>{{checkbox.label}} </label>
          </div>
          <button type="submit" class="form_button">{{button}} </button>
          <p class="form_info">{{info}} </p>
        </form>
      {{/with}}
    </main>
    
    <div class="updates">
      {{#with updates}}       
          <h1 class="updates_title">{{title}}</h1>
          {{#each list}} 
            <div class="updates_list">
              <img src="https://picsum.photos/32" alt="image" class="upd_image">
              <div class="upd_body">
                <p class="updates_nick">@{{nickname}}</p>
                <p class="updates_description">{{description}}</p>
              </div>
            </div>
            
          {{/each}}
          <a href="{{show_all.url}}" class="updates_url">{{show_all.text}}</a>
      {{/with}}
    </div>


    <div class="exp">
      {{#with expirience}} 
          <div class="exp_header">
            
            <h1 class="exp_title">{{title}}</h1>
            <p class="exp_badge">{{badge}}</p>   
          </div>   
          
          <div class="exp_card">
            {{#each list}} 
            <div class="exp_list">
                <h1 class="exp_name">{{name}}</h1>
                <p class="exp_details">{{details}}</p>
              
            </div>
            
          {{/each}}
          </div>
          
          
      {{/with}}
      
      
    </div>




{{!-- =========================================== --}}
    <footer class="page_block">
      <div class="list">
        <div class="footer">
          <div class="">
            {{>logo}}
            <span class="footercopy">Copiright 2023-2024</span> 
          </div>
          {{#each footer}}
            <div class="">
              <span class="footer_title">{{title}}</span>
              {{>nav list=links isVertical="true"}}
            </div>
          {{/each}}
        </div>      
      </div>  
    </footer>
